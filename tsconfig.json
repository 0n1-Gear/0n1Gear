{
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ES2020"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "skipLibCheck": false,
    "sourceMap": true,
    "strict": true,
    "target": "ES2018",
    "suppressImplicitAnyIndexErrors":true
  },
  "include": ["hardhat.config.ts", "config/**/*.ts", "scripts/**/*.ts", "test/**/*.ts"]
}
